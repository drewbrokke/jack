{
	"$schema": "http://json-schema.org/draft-06/schema#",
	"additionalProperties": false,
	"properties": {
		"commandArray": {
			"items": {
				"type": "string"
			},
			"type": "array"
		},
		"command": {
			"type": "string"
		},
		"description": {
			"type": "string"
		},
		"foreground": {
			"default": false,
			"description": "Whether or not to spawn the process in the foreground",
			"type": "boolean"
		},
		"key": {
			"description": "The key to press to trigger the command",
			"pattern": "^([CS]-)?[a-z]$",
			"type": "string"
		},
		"onErrorCommand": {
			"items": {
				"type": "string"
			},
			"type": "array"
		},
		"refreshOnComplete": {
			"default": false,
			"description": "Whether or not to refresh the log after the command completes successfully",
			"type": "boolean"
		}
	},
	"required": [
		"command",
		"description",
		"key"
	],
	"type": "object"
}